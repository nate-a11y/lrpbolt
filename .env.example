###########################################
# Environment variables (example values)    #
# Rename this file to `.env` and replace    #
# placeholders with your real credentials. #
############################################

# Google Calendar API configuration
VITE_CALENDAR_API_KEY="your_calendar_api_key_here"           # API key for Google Calendar
VITE_CALENDAR_ID="your_calendar_id_here"                     # Calendar ID to read events from

# Firebase client configuration
VITE_FIREBASE_API_KEY="your_firebase_api_key_here"           # Firebase API key
VITE_FIREBASE_AUTH_DOMAIN="your_project.firebaseapp.com"     # Firebase Auth domain
VITE_FIREBASE_PROJECT_ID="your_project_id_here"              # Firebase project ID
VITE_FIREBASE_STORAGE_BUCKET="your_project.appspot.com"      # Firebase storage bucket
VITE_FIREBASE_MESSAGING_SENDER_ID="your_sender_id_here"      # Firebase messaging sender ID
VITE_FIREBASE_APP_ID="your_app_id_here"                      # Firebase app ID

# OAuth client ID for Google sign-in
VITE_GOOGLE_CLIENT_ID="your_google_client_id_here"           # Google OAuth client ID

# Backend API configuration
VITE_API_BASE_URL="https://example.com/claim-proxy.php"      # Proxy endpoint for backend API
VITE_API_SECRET_KEY="your_api_secret_key_here"               # Shared secret for backend API

# CSV used for time log backup/import
VITE_TIME_LOG_CSV="https://example.com/time-log.csv"         # CSV export for time logs

# Cloud Function to move queued rides into live
VITE_DROP_DAILY_URL="https://us-central1-your_project_id.cloudfunctions.net/dropDailyRidesNow" # Cloud Function URL
# Optional if HTTPS function uses shared secret
VITE_LRP_ADMIN_TOKEN="changeme"                              # Admin token for secure function calls
